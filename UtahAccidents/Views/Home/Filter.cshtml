@{
    ViewData["Title"] = "Filter Crash Data";
}

@model Accident


<form method="post">
    <label asp-for="COUNTY_NAME">County</label>
    <select asp-for="COUNTY_NAME">
        <option value="">Select a County</option>
        @foreach (string c in ViewBag.County)
        {
            <option value="@c">@c</option>
        }
    </select>

    <button type="submit" class="btn btn-success btn-sm-float-end" asp-controller="Home" asp-action="filterview">Filter by Team</button>
</form>



